<!DOCTYPE html>
<html>
<head>
    <%- include('../components/head'); %>
    <title><%= title %></title>
</head>

<header>
    <%- include('../components/header', {sel1:'false', sel2:'false', sel3:'false'}); %>
</header>

<body class="container">
    <main style="margin-top: 25px;">
        <div class="jumbotron shadow text-center">
            <h1>Update Animal</h1>
            <form action="/update/<%= id %>" method="POST">
                <div class="form-group row" style="margin-top: 30px;">
                    <label for="inputText" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputText" placeholder="name" style="width: 300px;" name="name">
                    </div>
                </div>
                <div class="form-group row" style="margin-bottom: 30px;">
                    <label for="inputText" class="col-sm-2 col-form-label">Type</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputText" placeholder="type" style="width: 300px;" name="type">
                    </div>
                </div>
                <button type="submit" class="btn btn-dark">Save</button>
            </form>
        </div>
    </main>
    
    <header>
        <%- include('../components/footer'); %>
    </header>
    
  </body>
</html>